<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="*Required fields"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <GridLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout1"
        android:rowCount="7"
        android:columnCount="2">


        <TextView
            android:text="Email* :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp" />

        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:id="@+id/suEmail"
            android:padding="5dp"
            android:layout_marginTop="10dp"           
            android:layout_marginRight="10dp"
            android:background="#d4d8dd"   />


        <TextView
            android:text="Password* :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" />

        <EditText
            android:inputType="textPassword"
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:id="@+id/suPass"
            android:padding="5dp"
            android:layout_marginTop="10dp"           
            android:layout_marginRight="10dp"
            android:background="#d4d8dd" />

        <TextView
            android:text="Re-Enter Pass* :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp" />

        <EditText
            android:inputType="textPassword"
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:id="@+id/suRePass"
            android:padding="5dp"
            android:layout_marginTop="10dp"           
            android:layout_marginRight="10dp"
            android:background="#d4d8dd" />

        <TextView
            android:text="First Name* :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <EditText
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:id="@+id/suFirst"
            android:padding="5dp"
            android:layout_marginTop="10dp"           
            android:layout_marginRight="10dp"
            android:background="#d4d8dd" />

        <TextView
            android:text="Last Name* :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" />

        <EditText
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:id="@+id/suLast"
            android:padding="5dp"
            android:layout_marginTop="10dp"           
            android:layout_marginRight="10dp"
            android:background="#d4d8dd" />

        <TextView
            android:text="City :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" />

        <EditText
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:id="@+id/suCity"
            android:padding="5dp"
           android:layout_marginTop="10dp"           
            android:layout_marginRight="10dp"
            android:background="#d4d8dd" />

        <TextView
            android:text="Country :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" />

        <EditText
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:id="@+id/suCountry"
            android:padding="5dp"
            android:layout_marginTop="10dp"           
            android:layout_marginRight="10dp"
            android:background="#d4d8dd" />

        <TextView
            android:text="Postal Code :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:id="@+id/suPostal"
            android:padding="5dp"
            android:layout_marginTop="10dp"           
            android:layout_marginRight="10dp"
            android:background="#d4d8dd" />

        <TextView
            android:text="Phone Number :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp" />

        <EditText
            android:inputType="phone"
            android:layout_width="165dp"
            android:layout_height="45dp"
            android:id="@+id/suPhone"
            android:padding="5dp"
            android:layout_marginTop="10dp"           
            android:layout_marginRight="10dp"
            android:background="#d4d8dd" />


    </GridLayout>
</LinearLayout>
</ScrollView>
